<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/textColorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_house"/>
                <android.support.design.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIcon="@drawable/ic_dollar"
                    app:chipStartPadding="@dimen/activity_vertical_margin"
                    app:chipEndPadding="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_gravity="start|bottom"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:text="150000"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_margin="@dimen/activity_horizontal_margin">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="2dp"
                    app:srcCompat="@drawable/ic_location"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Web Minster, London"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/inner_margin"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        app:srcCompat="@drawable/ic_squareft"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3200 Sqft"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="2dp"
                        app:srcCompat="@drawable/ic_room"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4 bedrooms"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_send"
            android:layout_gravity="center|end"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:layout_anchor="@id/card"
            app:layout_anchorGravity="center|end"/>
    </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>