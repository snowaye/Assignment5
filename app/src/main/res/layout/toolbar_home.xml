<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search_text"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    app:srcCompat="@drawable/ic_search"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="@dimen/text_size_body_small"
                    android:hint="@string/hint_search_text"
                    android:layout_height="wrap_content" />
           </LinearLayout>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgv_horizontal_display"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_horizontal_display"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgv_vertical_display"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_vertical_display"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_pizza"/>

        </LinearLayout>
